html(lang='en')
//
    <![endif]
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title DashUp Login
    link(rel='stylesheet', href='css/login.style.css')
    //if lt IE 9
      script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
  body
    #logo
      #logo.seven.tenths
        img.header-logo(src='../images/dashup_logo.png', style='display: block; width: 100px; margin-left: auto; margin-right: auto; margin-top: 100px;')
    form.login(action='/login', method='post')
      p
        label(for='login') User name:
        input#login(type='text', name='username')
      p
        label(for='password') Password:
        input#password(type='password', name='password')
      p.login-submit
        button.login-button(type='submit') Login
      p.forgot-password
        a(href='login.html') Forgot your password?
